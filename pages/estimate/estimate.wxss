.popup{
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	background-color: rgba(0,0,0,0.7);
	display: flex;
	justify-content: center;
	align-items: center;
}
.popup > .modal{
	width: 80%;
	background-color: #191919;
	font-size: 36rpx;
	border-radius: 24rpx;
	border: 1px solid #fff;
	padding: 20rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	line-height: 98rpx;
}
.modal > .modal-bottom{
	width: 100%;
	display: flex;
	flex-direction: row;
	margin-top: 20rpx;
}
.btn{
	display: inline-block;
}
.btn.btn-ok{
	background-color: rgba(70,175,95,0.9);
	color: #fff;
}
.btn.btn-not{
	background-color: #fff;
	color: #000;
}
.modal-bottom.halfandhalf > .btn{
	width: 40%;
	box-sizing: border-box;

}
.guaiqiao{
	width: 120rpx;
	height: 121rpx;
}
.against-chart{
	width: 100%;
	margin: 100rpx 0;
}
.chart-background{
	width: 100%;
	height: 70rpx;
	background-image: linear-gradient(to right, #C02425 15%, #F0CB35 45%, #56ab2f 60%, #a8e063 85%); 
	position: relative;

}
.chart-pin-image{
	width: 26rpx;
	height: 60rpx;
}
.chart-pin{
	position: absolute;
	width: 70rpx;
	height: 70rpx;
	left: 50%;
	margin-left: -35rpx;
	transform: translate(0, -35rpx);
	transition: all .6s ease-out;
}
.chart-pin-score{
	position: absolute;
	font-size: 32rpx;
	top: -40rpx;
	width: 70rpx;
	text-align: center;
}
.chart-consclusion{
	position: absolute;
	text-align: center;
	top: 75rpx;
	width: 100%;
	font-size: 42rpx;
}
