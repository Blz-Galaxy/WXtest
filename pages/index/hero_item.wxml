<template name="hero_item">
	<view id="{{name}}" class="hero_item" bindtap="hero_item_tap_handler2">
		<image wx:if="{{legion}}" class="icon-list-small picked" src="../../image/hero_image/{{name}}.jpg"></image>
		<image wx:if="{{!legion}}" class="icon-list-small" src="../../image/hero_image/{{name}}.jpg">></image>
		<view wx:if="{{legion == 1}}" class="tag legion1tag">1</view>
		<view wx:if="{{legion == 2}}" class="tag legion2tag">2</view>
	</view>
</template>